<%- include ("../partials/header") %>
<!-- Este container vai manter todo o conteudo centrado -->

<div class="container">
	
	<header class="jumbotron">
		<!-- Este container vai manter as coisas centradas dentro do jumbotron -->
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>Travel the world with our selected campgrounds.</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Campground</a>
			</p>
		</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<div class="col-lg-12">
			<h3>Our Most Popular Campgrounds!</h3>
		</div>
	
		<% campgrounds.forEach(function(campground){%>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= campground.image %>">
					<div class="caption">
						<h4><%= campground.name %></h4>
					</div>
					<p>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>	
		<% }); %>
		
	</div>
</div>

<%- include ("../partials/footer") %>